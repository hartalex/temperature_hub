{
  "name": "temperature_hub",
  "version": "1.0.5",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/test.js --env=jsdom",
    "clean": "rimraf build",
    "build": "NODE_ENV=production npm run clean && babel src/server -d build/server && webpack",
    "lint": "eslint src/**",
    "start": "NODE_ENV=development node src/server/server.js",
    "prodstart": "node build/server/server.prod.js",
    "version": "node -v",
    "coverage": "nyc report --reporter=text-lcov > lcov.info",
    "cleanOldContainers": "node scripts/cleanOldContainers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hartalex/temperature_hub.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hartalex/temperature_hub/issues"
  },
  "homepage": "https://github.com/hartalex/temperature_hub#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "ejs": "^2.5.7",
    "es6-promise": "^4.0.5",
    "express": "^4.15.5",
    "express-cache-headers": "^0.1.3",
    "express-force-ssl": "^0.3.2",
    "express-winston": "^2.4.0",
    "isomorphic-fetch": "^2.2.1",
    "mongodb": "^3.0.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-google-charts": "^1.5.3",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "request": "^2.83.0",
    "socket.io-client": "^2.2.0",
    "whatwg-fetch": "^2.0.3",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.3.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "6.26.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-jsx": "0.0.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "image-webpack-loader": "4.3.1",
    "jest": "23.1.0",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "redux-devtools": "^3.4.1",
    "resolve-url-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "simple-mock": "^0.8.0",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-node-externals": "^1.6.0",
    "nyc": "^11.6.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/client/**/*.{js,jsx,mjs}",
      "src/server/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "standard",
      "promise",
      "react",
      "jsx",
      "jsx-a11y",
      "import",
      "jest"
    ],
    "globals": {
      "fetch": false,
      "describe": false,
      "it": false,
      "alert": false,
      "URL": false
    },
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    },
    "env": {
      "jest/globals": true
    }
  }
}
